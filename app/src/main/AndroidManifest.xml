<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loulo.applicationmadrental">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ReservationsActivity" android:label="Mes réservations" android:parentActivityName=".MainActivity" />
        <activity android:name=".Res1Activity" android:label="Réservation - étape 1/2" android:parentActivityName=".SearchActivity" />
        <activity android:name=".ProfileActivity" android:label="Mon Profil" android:parentActivityName=".MainActivity"/>
        <activity android:name=".SearchActivity" android:label="Recherche de véhicule" android:parentActivityName=".MainActivity" />
        <activity android:name=".Res2Activity" android:label="Réservation - étape 2/2" android:parentActivityName=".Res1Activity"/>
    </application>

</manifest>